<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Izin untuk koneksi internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnsBerita"
        tools:targetApi="31">

        <activity
            android:name=".Activity.BeritaDetailActivityPelanggan"
            android:exported="false" />
        <activity
            android:name=".Activity.EditActivity"
            android:exported="false" />
        <!-- Atur IntroActivity sebagai aktivitas pertama (entry point) -->
        <activity
            android:name=".Activity.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.TambahActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.PelangganMainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.BeritaDetailActivity"
            android:exported="false" />
    </application>
</manifest>
